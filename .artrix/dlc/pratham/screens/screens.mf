<screens>
    <screen name="splash" default="1">
        <ImageWidget name="background">
            <src>splash</src>
            <anchor><vec x="0" y="0" z="0"></vec></anchor>
            <size><vec x="1.0" y="1.0" z="0"></vec></size>
            <position><vec x="0" y="0" z="0"></vec></position>
        </ImageWidget>
        <TimerWidget name = "timerGotoHome" elapseTime="1000">
        	<command>
        		<SwitchScreenAction name="actionGotoHome">
        			<target>home</target>
        		</SwitchScreenAction>
        	</command>
        </TimerWidget>
    </screen>
    <screen name="home">
    	<ImageWidget name="background">
            <src>dots</src>
            <anchor><vec x="0" y="0" z="0"></vec></anchor>
            <size><vec x="1.0" y="1.0" z="0"></vec></size>
            <position><vec x="0" y="0" z="0"></vec></position>
        </ImageWidget>
		<ImageWidget name="buttonPilot">
            <src>black-bar</src>
            <anchor><vec x="0" y="0" z="0"></vec></anchor>
            <size><vec x="0.4" y="0.05" z="0"></vec></size>
            <position><vec x="-0.6" y="0.925" z="0"></vec></position>
        </ImageWidget>
        <ImageWidget name="buttonPilot">
            <src>black-bar</src>
            <anchor><vec x="0" y="0" z="0"></vec></anchor>
            <size><vec x="0.4" y="0.05" z="0"></vec></size>
